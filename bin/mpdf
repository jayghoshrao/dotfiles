#!/bin/bash
if [ "$*" ]; then
    mpc clear
    command='mpc search'
    for ARG in "$@"
    do
        command="$command any $ARG"
    done
    $command | mpc add
    mpc play
else
    mpdpipe=$(mpc listall | dmenu -i -nl -xs -l 20 -c -rs -ms -ml -lb)
    cnt=$(echo "$mpdpipe" | wc -c)
    if [ $cnt -gt 1 ]; then
        mpc clear
        echo "$mpdpipe" | mpc add && mpc play
    fi
fi
