#!/usr/bin/env bash
set -e

DIR="$NOTES_DIR"

POSITIONAL=()
while [[ $# -gt 0 ]]
do
    key="$1"

    case $key in
        -d|--directory)
            DIR="$2"
            shift # past value
            shift
            ;;
        *)    # unknown option
            POSITIONAL+=("$1") # save it in an array for later
            shift # past argument
            ;;
    esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters

cd "$DIR" || exit

EDITOR=nvim
GOYO=+Goyo

"$EDITOR" "$GOYO" "$*".md

