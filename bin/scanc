#!/bin/bash

set -euo pipefail

DRIVER="hpaio:/net/officejet_pro_8600?ip=192.168.178.28&queue=false"
MODES=( Color Gray Lineart )
MODE=Color

DATE=$(date -d now '+%Y-%m-%d')
OUTPUT="${DATE}_scanned.pdf"

TMPFILE="/tmp/$OUTPUT"


POSITIONAL=()
while [[ $# -gt 0 ]]
do
    key="$1"

    case $key in
        # -d|--driver)
        #     DRIVER="$2"
        #     shift # past value
        #     shift
        #     ;;
        -o|--output)
            OUTPUT="$2"
            shift # past value
            shift
            ;;
        -m|--mode)
            MODE="$2"
            shift # past value
            shift
            ;;
        *)    # unknown option
            POSITIONAL+=("$1") # save it in an array for later
            shift # past argument
            ;;
    esac
done
set -- "${POSITIONAL[@]}" # restore positional parameters

if [[ -z "$DRIVER" ]] ; then
    DRIVERS=$( scanimage -L | awk '{print $2}' | tr -d \'\`  )
    DRIVER=$(echo "$DRIVERS" | fzf )
fi

scanimage -p --resolution 300 --mode $MODE -d "$DRIVER" --format=tiff | convert tiff:- "$TMPFILE"

sleep 1

gs -q -dNOPAUSE -dBATCH -dSAFER        \
   -sDEVICE=pdfwrite                   \
   -dCompatibilityLevel=1.3            \
   -dPDFSETTINGS=/screen               \
   -dEmbedAllFonts=true                \
   -dSubsetFonts=true                  \
   -dColorImageDownsampleType=/Bicubic \
   -dColorImageResolution=300          \
   -dGrayImageDownsampleType=/Bicubic  \
   -dGrayImageResolution=300           \
   -dMonoImageDownsampleType=/Bicubic  \
   -dMonoImageResolution=300           \
   -sOutputFile="$OUTPUT" \
   "$TMPFILE"
