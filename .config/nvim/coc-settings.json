{
    "python.analysis.stubPath": "/home/jayghoshter/typings",
    "python.analysis.useLibraryCodeForTypes":true,
    "languageserver": {
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"],
            "trace.server": "verbose"
        },
        "fortran": {
            "command": "fortls",
            "filetypes": ["fortran"],
            "rootPatterns": [".fortls", ".git/"]
        },
        "ccls": {
            "command": "ccls",
            "filetypes": ["c", "cpp", "objc", "objcpp"],
            "rootPatterns": [".ccls", "compile_commands.json", ".vim/", ".git/", ".hg/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "texlab": {
            "command": "texlab",
            "filetypes": ["tex", "latex"],
            "rootPatterns": [".git/"],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/texlab"
                }
            }
        }
    }
}

