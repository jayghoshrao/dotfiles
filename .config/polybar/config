label-disconnected-foreground = ${colors.black}

format-connected-padding = 1
format-connected-margin  = 1
format-connected-spacing = 1

; ramp-signal-0 = 1
; ramp-signal-1 = 2
; ramp-signal-2 = 3
; ramp-signal-3 = 4
; ramp-signal-4 = 5
; ramp-signal-foreground = ${colors.foreground}

[module/date]
type = internal/date
interval = 5

date = "%d %b"
date-alt = "%Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-padding = 1

label = %date% %time%
label-font = 6

format-background = ${colors.deepblue}
format-foreground = ${colors.black}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.black}
label-mode-background = ${colors.yellow}

; focused                = Active workspace on focused monitor
label-focused            = %name%
label-focused-background = ${colors.deepblue}
label-focused-foreground = ${colors.black}
label-focused-padding    = 1
label-focused-font       = 6

; unfocused             = Inactive workspace on any monitor
label-unfocused         = %name%
label-unfocused-padding = 1
label-unfocused-background = ${colors.black}
label-unfocused-foreground = ${colors.whitegrey}

; visible                = Active workspace on unfocused monitor
label-visible            = %name%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${self.label-focused-foreground}
label-visible-padding    = 1

; urgent                = Workspace with urgency hint set
label-urgent            = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding    = 1

[module/battery]
type = internal/battery
full-at = 95
battery = BAT0
adapter = AC
poll-interval = 5

format-discharging-padding = 1
format-charging-padding = 1
format-full-padding = 1

format-charging = <animation-charging> <label-charging> 
format-discharging = <ramp-capacity> <label-discharging> 
format-full = <ramp-capacity> <label-full> 

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-3 = 
ramp-capacity-4 = 

label-charging = %percentage%%
label-discharging = %percentage%%
label-full = %percentage%%
label-charging-alt = %time%
ramp-capacity-alt = %time%

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-3 = 
animation-charging-4 = 

animation-charging-framerate = 750

format-full-background = ${colors.deepblue}
format-full-foreground = ${colors.black}
format-full-font = 6

format-charging-background = ${colors.deepblue}
format-charging-foreground = ${colors.black}
format-charging-font= 6

format-discharging-background = ${colors.deepblue}
format-discharging-foreground = ${colors.black}
format-discharging-font= 6


[module/pomodoro]
type = custom/script
exec = python ~/bin/pomodoro-client.py status
interval = 1
format = <label>
label = %output%
format-padding = 1
format-background = ${colors.yellow}
format-foreground = ${colors.black}
format-font = 6


[module/musicinfo]
type = custom/script
; exec = ~/.config/polybar/music.sh
exec = ~/bin/music_name.sh
; exec = playerctl metadata title
interval = 1
format = <label>
label = %output:0:30:...%
format-padding = 5
;format-foreground = ${colors.my_color6}
format-foreground = #d3dae6

[module/updates]
type = custom/script
exec = ~/bin/pb-updates
interval = 60
; format-prefix = " "
format = <label>
label = %output%
format-padding = 1
format-foreground = ${colors.black}
format-background = ${colors.cyan}
format-font = 6

[module/ghnotify]
type = custom/script
exec-if = curl -I google.com
exec = ~/bin/ghnoti
interval = 300
; format-prefix = " "
format = <label>
label = %output%
format-padding = 2
format-foreground = ${colors.whitegrey}
format-background = ${colors.black}
format-font = 2
click-left = exec firefox --new-tab https://github.com/notifications

[module/microphone]
type = custom/script
tail = true
exec = ~/bin/mic -l
format = <label>
label = %output%
format-padding = 1
format-foreground = ${colors.whitegrey}
format-background = ${colors.black}
format-font = 8
; click-left = exec firefox --new-tab https://github.com/notifications

[module/pulseaudio-control]
type = custom/script
tail = true
exec-if = pgrep pulseaudio
label-padding = 1
label-foreground = ${colors.black}
label-background = ${colors.lightblue}
label-font = 6

; Icons mixed from Font Awesome 5 and Material Icons
; You can copy-paste your options for each possible action, which is more
; trouble-free but repetitive, or apply only the relevant ones (for example
; --sink-blacklist is only needed for next-sink).
exec = pulseaudio-control --icons-volume " , " --icon-muted " " --sink-nicknames-from "device.description" --sink-nickname "alsa_output.pci-0000_00_1b.0.analog-stereo: Speakers" --sink-nickname "alsa_output.usb-Lenovo_ThinkPad_Thunderbolt_3_Dock_USB_Audio_000000000000-00.iec958-stereo: Dock" listen
click-right = exec pavucontrol &
click-left = pulseaudio-control togmute
click-middle = pulseaudio-control --sink-blacklist "alsa_output.pci-0000_01_00.1.hdmi-stereo-extra2" next-sink
scroll-up = pulseaudio-control --volume-max 130 up
scroll-down = pulseaudio-control --volume-max 130 down

[module/xwindow]
type = internal/xwindow
# label = %title:0:30:...%
label = %title%

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

format-prefix = " "
format-prefix-foreground = ${colors.black}

