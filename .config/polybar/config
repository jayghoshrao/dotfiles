[module/date]
type = internal/date
interval = 5

date = "%d %b"
date-alt = "%Y-%m-%d"

time = %H:%M
time-alt = %H:%M:%S

format-padding = 1

label = %date% %time%
label-font = 6

format-background = ${colors.shade2}
format-foreground = ${colors.foreground}

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
pin-workspaces = true

label-mode-padding = 1
label-mode-foreground = ${colors.nord0}
label-mode-background = ${colors.nord13}

; focused                = Active workspace on focused monitor
label-focused            = %name%
label-focused-background = ${colors.nord10}
; label-focused-background = ${colors.background}
label-focused-foreground = ${colors.nord0}
label-focused-padding    = 1
label-focused-font       = 6

; unfocused             = Inactive workspace on any monitor
label-unfocused         = %name%
label-unfocused-padding = 1
label-unfocused-background = ${colors.background}
label-unfocused-foreground = ${colors.nord4}

; visible                = Active workspace on unfocused monitor
label-visible            = %name%
label-visible-background = ${self.label-focused-background}
label-visible-foreground = ${self.label-focused-foreground}
label-visible-padding    = 1

; urgent                = Workspace with urgency hint set
label-urgent            = %name%
label-urgent-background = ${colors.alert}
label-urgent-padding    = 1

