[settings]
; format-background = ${colors.black}
; format-foreground = ${colors.white}

[module/vpnstatus]
type              = custom/script
exec              = ~/bin/vpnstatus
interval          = 1
format = <label>
label = %output%
format-background = ${colors.yellow}
format-foreground = ${colors.black}
format-padding = 1
format-font = 6

