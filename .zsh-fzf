# fs: fuzzy subdir - cd into the directory of the selected file {{{
fs() {
   local file
   local dir
   file=$(fd | fzf +m -q "$1")

  if [[ -n $file ]]
  then
     if [[ -d $file ]]
     then
        cd -- $file
     else
        cd -- ${file:h}
     fi
  fi
}
