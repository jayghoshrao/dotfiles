# vg: persistent fuzzy grep-edit via rg/ag/grep {{{
vg() {
    if [ ! "$#" -gt 0 ]; then echo "Need a string to search for!"; return 1; fi
    if command -v rg &>/dev/null; then
        rg -S --no-heading --no-messages --line-number "$@" | fzf -e -d ':' \
            --preview 'rg --pretty --with-filename --context 3 . {1} | sed -n "$((({2}-3>0?{2}-3:1)),({2}+3))p"' \
            --bind "enter:execute: $EDITOR {1} +{2}"
    elif command -v ag &>/dev/null; then
        ag -S --nobreak --noheading "$@" | fzf -e -d ':' --bind "enter:execute: $EDITOR {1} +{2}"
    else
        grep -irEnH "$@" | fzf -e -d ':' --bind "enter:execute: $EDITOR {1} +{2}"
    fi
}

