    # Use fd (https://github.com/sharkdp/fd) instead of the default find
    # command for listing path candidates.
    # - The first argument to the function ($1) is the base path to start traversal
    # - See the source code (completion.{bash,zsh}) for the details.
    _fzf_compgen_path() {
      fd --hidden --follow --exclude ".git" . "$1"
    }

    # Use fd to generate the list for directory completion
    _fzf_compgen_dir() {
      fd --type d --hidden --follow --exclude ".git" . "$1"
    }
fi

# fl - fzf-locate: {{{
fzf_locate()
{
    # Fuzzy locate any file/folder in home directory
    # Pipes fd output to fuzscope for efficient filtering and preview
    local OUT FILE

    OUT=$(fd -L --base-directory="$HOME" "$@" . | fuzscope --base-directory "$HOME")

    if [[ -n "$OUT" ]]; then
        # Get last selected line (handles multiple selections from peek)
        FILE="${OUT##*$'\n'}"
        [ -d "$FILE" ] && cd "$FILE" || echo "$OUT" | peek
    fi
}

alias fl="fzf_locate"
zle -N fzf_locate
bindkey '^F' fzf_locate
