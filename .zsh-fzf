# fzf-locate-ALT+I:{{{
# ALT-I - Paste the selected entry from locate output into the command line
fzf-locate-widget() {
  local selected
  # Use fd instead of locate for better performance
  if selected=$(fd . / --hidden --follow --type f 2>/dev/null | fzf -q "$LBUFFER"); then
    LBUFFER=$selected
  fi
  zle redisplay
}
zle -N fzf-locate-widget
# bindkey '\ei' fzf-locate-widget
bindkey '^o' fzf-locate-widget

