# Autojump: {{{
j() {
    if ! command -v autojump &>/dev/null; then
        fj
        return
    fi

    if [[ "$#" -ne 0 ]]; then
        cd $(autojump "$@")
        return
    fi
    cd "$(autojump -s | awk '/_____/{exit} {$1=""; print substr($0,2)}' |  fzf --height 40% --tac)"
}

k() {
    if ! command -v zoxide &>/dev/null; then
        fj
        return
    fi

    if [[ "$#" -ne 0 ]]; then
        cd $(__zoxide_z "$@")
        return
    fi
    cd "$(zoxide query --list --score | awk '{$1=""; print substr($0,2)}' |  fzf --height 40% --tac)"
}
