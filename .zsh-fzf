# cd-files: {{{
cd() {
    if [[ "$#" != 0 ]]; then
        builtin cd "$@"
        return
    fi

    while true; do
        # Build listing once before fzf, not inside the loop
        local lsd=$(echo ".." && ls -pL --group-directories-first --color=never)
        local sel="$(printf '%s\n' "$lsd" | fzf --reverse --print-query --expect=ctrl-e --bind="ctrl-y:execute@echo ${PWD}/{} | xclip -i -selection clipboard@" --preview 'scope.sh {q} {}')"

        [[ -z "$sel" ]] && return 0

        # Parse fzf output using parameter expansion instead of sed for efficiency
        local lines=("${(@f)sel}")
        local query="${lines[1]}"
        local key="${lines[2]}"
        local fname="${lines[3]}"

        if [[ -f "$fname" ]] && command -v filer &>/dev/null; then
            printf '%s\n' "$query" "$fname" | filer
        elif [[ -f "$query" ]] && command -v filer &>/dev/null; then
            printf '%s\n' "$query" "$fname" | filer
        elif [[ -d "$fname" ]]; then
            builtin cd "$fname" &>/dev/null
        elif [[ -d "$query" ]]; then
            builtin cd "$query" &>/dev/null
        fi
    done
}
