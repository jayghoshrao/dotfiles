{
    "cppdbg": {
        "prefix": ["cppdbg"],
        "body": [
            "{",
            "    \"version\": \"0.2.0\",",
            "    \"configurations\": [",
            "        {",
            "            \"type\": \"cppdbg\",",
            "            \"request\": \"launch\",",
            "            \"name\": \"Debug\",",
            "            \"program\": \"${workspaceFolder}/\",",
            "            \"stopOnEntry\": true,",
            "            \"cwd\": \"${workspaceFolder}\",",
            "            \"args\": [",
            "            ],",
            "            \"environment\": [",
            "            ],",
            "            \"setupCommands\": [",
            "                {",
            "                    \"description\": \"Enable pretty-printing for gdb\",",
            "                    \"text\": \"-enable-pretty-printing\",",
            "                    \"ignoreFailures\": true",
            "                }",
            "        }",
            "    ]",
            "}"
        ],
        "description": "VSCode cppdbg template"
    }
}
